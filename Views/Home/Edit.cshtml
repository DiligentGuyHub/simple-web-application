@model Example.Models.User
@{
    ViewBag.Title = "Edit user";
}
<form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Username" class="control-label">Username</label>
        <input type="text" asp-for="Username" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Mail" class="control-label">Mail</label>
        <input type="text" asp-for="Mail" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label">Password</label>
        <input type="password" asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save changes" class="btn btn-outline-success" />
    </div>
</form>