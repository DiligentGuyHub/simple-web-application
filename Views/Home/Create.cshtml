@model Example.Models.User
@{
    ViewBag.Title = "Adding user";
}
<form asp-action="create" asp-controller="home">
    <div class="form-group">
        <label asp-for="Username" class="control-label">Username</label>
        <input type="text" asp-for="Username" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Mail" class="control-label">Mail</label>
        <input type="text" asp-for="Mail" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label">Password</label>
        <input type="password" asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Create account" class="btn btn-outline-primary" />
    </div>
</form>